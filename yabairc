# Scripting Addition

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Global Settings
yabai -m config focus_follows_mouse autoraise


# Window Settings
yabai -m config layout                       bsp

yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   20

# Easing
yabai -m config window_animation_easing      ease_in_sine

# Mouse settings
yabai -m config mouse_modifier alt

yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# Appearance

yabai -m config window_shadow off
yabai -m config status_bar                   off
yabai -m config insert_feedback_color        0xFFB8BFED

# Opacity
yabai -m config window_opacity 				 on
yabai -m config window_opacity_duration      2
yabai -m config active_window_opacity        1.00
yabai -m config normal_window_opacity        0.8

# Animation

yabai -m config window_animation_duration    0.15

# App Rules
yabai -m rule --add app="^System Settings$" manage=off

# Menubar
yabai -m config menubar_opacity               0.0

# For SketchyBar on iMac
yabai -m config external_bar main:30:0

# JankyBorder
borders active_color=0xFFB8BFED inactive_color=0xFFE1E3E4 width=7

echo "Yabai is locked and loaded"
