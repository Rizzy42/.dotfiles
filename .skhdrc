# Yabai

# Focus Windows
alt - k                    : yabai -m window --focus north
alt - j                    : yabai -m window --focus south
alt - l                    : yabai -m window --focus east
alt - h                    : yabai -m window --focus west

# Swap Windows
ctrl + alt - k             : yabai -m window --swap north
ctrl + alt - j             : yabai -m window --swap south
ctrl + alt - l             : yabai -m window --swap east
ctrl + alt - h             : yabai -m window --swap west

# Warp Windows
cmd + alt - k              : yabai -m window --warp north
cmd + alt - j              : yabai -m window --warp south
cmd + alt - l              : yabai -m window --warp east
cmd + alt - h              : yabai -m window --warp west

# Window Size

shift + ctrl + alt - k     : yabai -m window --resize top:0:-20
shift + ctrl + alt - j     : yabai -m window --resize bottom:0:20
shift + ctrl + alt - l     : yabai -m window --resize right:20:0
shift + ctrl + alt - h     : yabai -m window --resize left:-20:0

hyper - k                  : yabai -m window --resize top:0:20
hyper - j                  : yabai -m window --resize bottom:0:-20
hyper - l                  : yabai -m window --resize right:-20:0
hyper - h                  : yabai -m window --resize left:20:0

# Float

# float / unfloat window and center on screen
alt - f                    : yabai -m window --toggle float

shift + alt - f                    : yabai -m window --toggle float;\
                             yabai -m window --grid 8:8:1:1:6:6

ctrl + alt - f            : yabai -m window --toggle sticky

# Zoom and Fullscreen

alt + shift - k            : yabai -m window --toggle zoom-parent
alt + shift - j            : yabai -m window --toggle zoom-fullscreen

# Desktops and windows
alt + shift - l            : yabai -m space --focus next
alt + shift - h            : yabai -m space --focus prev
alt + shift - r            : yabai -m space --focus recent

cmd + shift - k            : yabai -m space --create
cmd + shift - j            : yabai -m space --destroy

cmd + shift - l            : yabai -m window --space next && yabai -m window --focus recent
cmd + shift - h            : yabai -m window --space prev && yabai -m window --focus recent


# Applications

alt - b                    : open -a "Brave Browser"
alt - o                    : open -a "Obsidian"
alt - s                    : open -a "Apple Music"
alt - z                    : open -a "Microsoft Teams"

#  Utilities
alt - m                    : open -a "Spark Desktop"
alt - a                    : open -a "Calendar"
alt - d                    : open -a "Todoist"
alt - n                    : open -a "Numi"

alt - e                    : open -a "Visual Studio Code"
alt - return               : open -a "iTerm"
